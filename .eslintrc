{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/react"
  ],
  "plugins": ["prettier"],
  "globals": {
    "describe": false,
    "context": false,
    "it": false,
    "expect": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "shallow": false,
    "mount": false,
    "mockery": false,
    "fetchMock": false,
    "jest": false,
    "afterAll": false,
    "beforeAll": false
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "react/jsx-space-before-closing": 0,
    "react/jsx-wrap-multilines": 0
  },
  "overrides": [{
    "files": ["*/**/test.js", "webpack.config.js"],
    "rules": {
      "global-require": 0
    }
  }]
}
